{
    "manifest_version": 3,
    "name": "Katibin Pro",
    "description": "Advanced Website Blocker",
    "version": "2.0",
    "permissions": [
      "storage",
      "declarativeNetRequest",
      "tabs",
      "webRequest",
      "webRequestBlocking"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "options_page": "options.html",  
    "icons": {
      "48": "icon.png"
    },
    "host_permissions": [
      "*://*/*"
    ]
  }
  